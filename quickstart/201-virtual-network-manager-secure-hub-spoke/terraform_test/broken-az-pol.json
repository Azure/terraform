        "if": {
          "allOf": [
            {
              "equals": "Microsoft.Network/virtualNetworks",
              "field": "type"
            },
            {
              "allOf": [
                {
                  "contains": "spoke-vnet",
                  "field": "Name"
                }
              ]
            }
          ]
        },
        "then": {
          "details": {
